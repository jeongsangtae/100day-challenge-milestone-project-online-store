<%- include('../../shared/includes/head', { pageTitle: '새로운 제품 추가' })  %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
  <%- include('../../shared/includes/header')  %>
  <main>
    <h1>새로운 제품 추가</h1>
    <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
      <p>
        <label for="title">제목</label>
        <input type="text" id="title" name="title" required>
      </p>
      <p>
        <label for="image">이미지</label>
        <input type="file" id="image" name="image" accept="image/png, image/jpg">
      </p>
      <p>
        <label for="summary">요약</label>
        <input type="text" id="summary" name="summary" required maxlength="250">
      </p>
      <p>
        <label for="price">가격</label>
        <input type="number" id="price" name="price" min="0.01" step="0.01" required>
      </p>
      <p>
        <label for="description">설명</label>
        <textarea id="description" name="description" rows="7" required></textarea>
      </p>
      <p>
        <button type="reset" class="btn btn-alt">초기화</button>
        <button type="submit" class="btn">저장</button>
      </p>
    </form>
  </main>
<%- include('../../shared/includes/footer')  %>